{
    "compilerOptions": {
       "lib": [
          "ES6", "ES2015"
       ],
       "target": "ESNext",
       "module": "Node16",
       "moduleResolution": "Node16",
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "esModuleInterop": true,
       "baseUrl": ".",
       "paths": {
           "*": ["node_modules/*"],
           "src/*": ["./src/*"]
       }
    }
 }